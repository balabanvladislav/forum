@model MDForum.Models.Theme

@{
    ViewBag.Title = "Create";
}

<h2>Creaza tema de discutii</h2>

<div id="content-wrapper">
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.Category, new { htmlAttributes = new { @class = "form-control", type = "hidden" } })
            </div>
        </div>



        <div class="form-group">
            <h3>@Html.LabelFor(model => model.Title,"Titlul", htmlAttributes: new { @class = "control-label col-md-2"})</h3>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <h3>@Html.LabelFor(model => model.DepText,"Descrierea", htmlAttributes: new { @class = "control-label col-md-2" })</h3>
            <div class="col-md-10">
                @*<textarea asp-for="model.DepText" class="form-control" text-wrap:normal" type="text" placeholder="Please add your experience here"></textarea>*@
                @Html.EditorFor(model => model.DepText, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DepText, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Posteaza" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Inapoi", "Index")
</div>
    </div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
