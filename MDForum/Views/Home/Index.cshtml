@model IEnumerable<MDF.Domain.Theme>


<div id="wrapper" xmlns="http://www.w3.org/1999/html">
    <div id="content-wrapper">

        <div id="content">
            <h2>Sport</h2>
            @foreach (var theme in Model.Where(x => x.Category == 1))
            {
                <blockquote>
                    <a href="#">

                        <dt>@Html.ActionLink(@theme.Title, "Index", "Comments", new { theme.Id }, htmlAttributes: new { })</dt>
                        <dd>
                            <em>
                                @theme.DepText
                            </em>

                        </dd>
                    
                    </a>
                    @if (User.IsInRole("admin"))
                    {
                        @Html.ActionLink("Sterge", "Delete", "Home", new { theme.Id }, htmlAttributes: new { })
                    }
            </blockquote>
            }
            
            <blockquote>
                @Html.ActionLink("Adauga", "Create", "Home", new { category = 1 }, htmlAttributes: new { })
            </blockquote>
            
            
            <h2>Film</h2>
            @foreach (var theme in Model.Where(x => x.Category == 2))
            {
                <blockquote>
                    <a href="#">
                   
                        <dt>@Html.ActionLink(@theme.Title, "Index", "Comments", new { theme.Id }, htmlAttributes: new { })</dt>
