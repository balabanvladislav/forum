@using Microsoft.AspNet.Identity
<div id="header">
    <h1>MDForum | Portal</h1>
</div>
<div id="navigation">
    <ul>

        <li id="lhome">
            @Html.ActionLink("Acasa", "Index", "Home")
        </li>
        <li id="labout">
            @Html.ActionLink("Despre noi", "About", "Home")
        </li>
        <li id="lcontact">
            @Html.ActionLink("Contacteaza -ne", "Contact", "Home")
        </li>
        <li id="mysterious">
            @Html.ActionLink("Ai intrebari?", "Questions", "Home")
        </li>
        @if (!Request.IsAuthenticated)
        {
            <li style=" position: absolute; right:10px">@Html.ActionLink("Inregistrare", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>

            <li style="position: absolute; right: 134px">@Html.ActionLink("Logare", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
        }
        else
        {
            using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
            {
                @Html.AntiForgeryToken()

                <li style=" position: absolute; right:10px">
                    <a href="javascript:document.getElementById('logoutForm').submit()">Iesi</a>
                </li>
            }
        }
    </ul>
</div>